<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- REST module -->
    <rest key="jira-cloud-gadget-rest"
          path="/jira-cloud-gadget"
          version="1.0">
        <description>REST for Jira Issue Cloud Gadget</description>
    </rest>

    <!-- Gadget Spec -->
    <gadget key="issue-info-gadget"
            name="JIRA Issue Cloud (DB) Gadget"
            location="gadget/issue-info-gadget.xml"
            i18n-name-key="gadget.jira.cloud.title">
        <description key="gadget.jira.cloud.desc">Show issues from JIRA_ISSUE_CLOUD table</description>
    </gadget>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="vietinbank-gadgetttt"/>
    
    <!-- add our web resources -->
    <web-resource key="vietinbank-gadgetttt-resources" name="vietinbank-gadgetttt Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>

        <resource type="download" name="vietinbank-gadgetttt.css" location="/css/vietinbank-gadgetttt.css"/>
        <resource type="download" name="vietinbank-gadgetttt.js" location="/js/vietinbank-gadgetttt.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>vietinbank-gadgetttt</context>
    </web-resource>

    <web-resource key="issue-info-gadget-resources" name="Issue Info Gadget Resources">
        <resource type="download" name="issue-info-gadget.html" location="/gadget/issue-info-gadget.html"/>
        <resource type="download" name="issue-info-gadget.js" location="/gadget/issue-info-gadget.js"/>
        <resource type="download" name="issue-info-gadget.css" location="/gadget/issue-info-gadget.css"/>
    </web-resource>

</atlassian-plugin>